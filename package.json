{
    "name": "react-ts-starter",
    "private": true,
    "version": "1.0.0",
    "description": "react-ts-starter",
    "main": "index.tsx",
    "repository": {
        "type": "git",
        "url": "https://github.com/joannakasinska/react-ts-starter"
    },
    "author": "Joanna Kasi≈Ñska",
    "license": "ISC",
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,json,scss,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/src/__tests__/testSetup.ts"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
            "\\.(scss)$": "identity-obj-proxy"
        },
        "testPathIgnorePatterns": [
            "<rootDir>/src/__tests__/mocks.ts",
            "<rootDir>/src/__tests__/testSetup.ts"
        ]
    },
    "scripts": {
        "start": "webpack-dev-server --open --mode development",
        "build": "webpack --config webpack.config.js --mode development",
        "lint": "/node_modules/tslint/bin/tslint './src/**/*.{ts,tsx}",
        "test": "jest src/",
        "test:coverage": "jest src/ --coverage"
    },
    "devDependencies": {
        "@babel/core": "^7.4.0",
        "@babel/preset-env": "^7.4.2",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@types/redux-logger": "^3.0.7",
        "autoprefixer": "^9.5.0",
        "awesome-typescript-loader": "^5.2.1",
        "css-loader": "^2.1.1",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.11.2",
        "file-loader": "^3.0.1",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^24.7.0",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "prettier": "1.16.4",
        "pretty-quick": "^1.10.0",
        "react-test-renderer": "^16.8.6",
        "redux-devtools-extension": "^2.13.8",
        "redux-logger": "^3.0.6",
        "resolve-url-loader": "^3.0.1",
        "sass-loader": "^7.1.0",
        "sinon": "^7.3.1",
        "source-map-loader": "^0.2.4",
        "style-loader": "^0.23.1",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "tslint-react": "^4.0.0",
        "typescript": "^3.4.1",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.2.1"
    },
    "dependencies": {
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.123",
        "@types/react": "^16.8.10",
        "@types/react-dom": "^16.8.3",
        "@types/react-intl": "^2.3.17",
        "@types/react-redux": "^7.0.6",
        "@types/react-router-dom": "^4.3.1",
        "@types/react-test-renderer": "^16.8.1",
        "@types/sinon": "^7.0.11",
        "lodash": "^4.17.11",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-intl": "^2.8.0",
        "react-redux": "^6.0.1",
        "react-router-dom": "^5.0.0",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0"
    }
}
